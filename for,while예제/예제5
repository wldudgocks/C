// while 문을 이용한 합계 프로그램
#include <stdio.h>

int main(void)
{ 
    int i, n, sum;    //변수 선언 while은 먼저 위에 변수 선언하고 시작함

    i = 0;     // 변수 초기화
    sum = 0;    // 변수 초기화 
    while (i < 5) //i가 0부터 시작하고 5보다 작으니까 총 5번 값을 입력해야 함
    { 
        printf("값을 입력하시오: "); 
        scanf("%d", &n); 
        sum = sum + n;   //반복하면서 적었던 값들이 계속 더해지고 있음
        i++;             //i가 4일때까지 반복하고 while문은 종료함
    } 
    printf("합계는 %d입니다.\n", sum);  //5번 입력했던 값들이 모두 더해져서 나옴

    return 0;  //정상종료
} 
