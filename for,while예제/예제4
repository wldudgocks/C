// while 문을 이용한 제곱값 출력 프로그램
#include <stdio.h>

int main(void)
 { 
    int n; 

    printf("====================\n");   
    printf(" n n의 제곱 \n");         //제목
    printf("====================\n");

    n = 1;   //while문은 먼저 선언부터함
    while (n <= 10)    //소괄호 안에 들어있는 것은 조건으로, n이 10보다 작거나 같다는 것을 표현
    { 
        printf("%5d %5d\n", n, n*n);  // prinf()쓸때 형식 지정자는 띄어쓰기로 구분하고, 변수는 쉼표로 구분함
        n++;   //n의 값에 1을 더한다는 뜻
    }

    return 0; //정상종료
}
