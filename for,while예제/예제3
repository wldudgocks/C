// if 문을 사용하여 절대값을 구하기
#include <stdio.h>

int main(void)
{
    int number; //int는 정수형임

    printf("정수를 입력하시오:"); 
    scanf("%d", &number); //%d는 형식 지정자로 변수 선언때 int(정수형)으로 선언했기에 정수형 형식 지정자 넣음

    if( number < 0 )   // 음의 정수를 입력하면 -부호가 붙음
        number = -number; 

    printf("절대값은 %d 입니다.\n", number); 
    return 0;
}
