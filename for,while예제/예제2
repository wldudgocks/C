//구구단 나열하는 프로그램
#include <stdio.h>

int main(void)
{
    for (int i = 2; i <= 9; i++) 
      /* 구구단은 보통 2단부터 시작하니까 i는 2로 초기화함,
      구구단은 9단까지 있으니 조건은 i가 9보다 작거나 같을 때까지로 함*/
    {
        printf("%d단 출력\n",i);  //단 구분을 위해 '몇 단 출력'넣음
        
        for (int j = 1; j <=9; j++) /* 두 번째 for문은 곱하는 숫자를 넣음,
                                         그래서 초깃값 1*/
        {
            printf("%d x %d = %d\n",i,j,i*j); //구구단은 숫자x숫자=숫자 형태이므로 , 그리고 for{ }밖에서 는 i,j값을 출력할 수 없음 안 
        }
        
    }
    return 0;  //정상종료인지 알기 위해
}
